%div.menu
  %div.menu__header
    %div.menu__header__box
      %p.menu__header__box__name
        = current_user.name
      %ul.menu__header__box__menu-button
        %li.menu__header__box__menu-button__new-group
          = link_to new_group_path do
            %i.fa.fa-edit{"data-turbolinks": "false"}
        %li.menu__header__box__menu-button__setting
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog
  %div.menu__list
    - current_user.groups.each do |group|
      %div.menu__list__group
        = link_to group_messages_path(group) do
          %p.menu__list__group__group-name
            = group.name
          %p.menu__list__group__message
            = group.show_last_message


